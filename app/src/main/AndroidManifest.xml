<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vssb.mitattendance" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Total Attendance"
        android:theme="@style/AppTheme" >

        <!-- android:theme="@style/Theme.AppCompat.Light.NoActionBar" -->
        <activity
            android:name=".MainActivity"
            android:label="Total Attendance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginInputActivity"
            android:label="@string/title_activity_login_input" >
        </activity>
        <activity
            android:name=".DetailedAttendanceActivity"
            android:label="Detailed Attendance" >
        </activity>
    </application>

</manifest>
